<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="lay-wiki-bg-main">

    <!-- 載入畫面 -->

    <div class="lay-wiki-preloader">
        <img src="~/Photo/preloader.gif" alt="preloader" class="preloader__item" />
    </div>

    <!-- 載入畫面 -->
    <!-- 導覽列 -->
    
    <header class="lay-wiki-nav-bg">
        <nav class="lay-wiki-nav-flex">
            <div class="lay-wiki-nav-logo">
                <a href="#">VTWiki</a>
            </div>
            <div class="lay-wiki-nav-link">
                <a href="#">公司介紹</a>
                <a href="#">人物介紹</a>
                <a href="#">最新消息</a>
                <a href="#">VTDiscovery</a>

                <div class="lay-wiki-lang-menu">
                    <div class="lay-wiki-selected-lang">
                        Chinese
                    </div>
                    <ul>
                        <li>
                            <a href="#" class="lay-wiki-en">English</a>
                        </li>
                        <li>
                            <a href="#" class="lay-wiki-ch">Chinese</a>
                        </li>
                        <li>
                            <a href="#" class="lay-wiki-jp">Japan</a>
                        </li>
                    </ul>
                </div>

                @*<div class="lang-menu">
                    <div class="selected-lang">
                        English
                    </div>
                    <ul>
                        <li>
                            <a href="#" class="de">German</a>
                        </li>
                        <li>
                            <a href="" class="en">English</a>
                        </li>
                        <li>
                            <a href="" class="fr">French</a>
                        </li>
                        <li>
                            <a href="" class="ar">Arabic</a>
                        </li>
                    </ul>
                </div>*@

            </div>
        </nav>
    </header>

    <!-- 導覽列 -->


    <div class="lay-wiki-body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 應用程式</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
